@using PAS.ResourceCenter.Web.Administration.Helpers
@{
    ViewBag.PageId = "extr-page";
}

@section topright{
    <span id="extr-page-header-space"><span class="hidden-mobile">Need help? Please call 1.877.260.1555.</span></span>
}

<div id="content" class="container">
    <div class="row">
        @{ await Html.RenderPartialAsync("_LoginText"); }
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
            <div class="well no-padding">
                <form action="@Url.Action("forgotpassword", "account")" method="post" id="login-form" class="smart-form client-form">
                    <header>
                        Reset Password
                    </header>
                    @Html.AntiForgeryToken()
                    @Html.ValidationBootstrap()
                    <fieldset>
                        <section>
                            <label class="label">Email</label>
                            <label class="input">
                                <i class="icon-append fa fa-envelope"></i>
                                <input type="email" name="email">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-envelope txt-color-teal"></i> Please enter the email address the account was registered</b>
                            </label>
                            <div class="note">
                                <a href="@Url.Action("login", "account")"><i class="fa"></i> Already remembered my password?</a>
                            </div>
                        </section>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-default">
                            Reset Your Password
                        </button>
                    </footer>
                </form>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align:center;">
                    <span style="font-size:11px;">@DateTime.Now.Year Peregrine Academic Services™ LLC.</span>
                </div>
            </div>  
    </div>
</div>