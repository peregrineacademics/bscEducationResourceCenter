@using PAS.ResourceCenter.Web.Administration.Helpers
@model LoginViewModel
@{
    ViewBag.PageId = "extr-page";
    ViewBag.PageClass = "animated fadeInDown";
}

@section topright{
    <span id="extr-page-header-space"><span class="hidden-mobile">Need help? Please call 1.877.260.1555.</span></span>
}

<div id="content" class="container">
    <div class="row">
        @{ await Html.RenderPartialAsync("_LoginText"); }
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
            <div class="well no-padding">
                <form action="@Url.Action("ResetPassword", "Account")" method="post" id="reset-form" class="smart-form client-form">
                    <header>
                        Reset Password
                    </header>
                    @Html.HiddenFor(m => m.ReturnUrl)
                    @Html.AntiForgeryToken()
                    @Html.ValidationBootstrap()
                    <fieldset>
                        <section>
                            <label class="label">Email</label>
                            <label class="input">
                                <i class="icon-append fa fa-envelope"></i>
                                <input type="email" name="email" value="">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-envelope txt-color-teal"></i> Please enter your Email</b>
                            </label>
                        </section>
                        <section>
                            <label class="label">Password</label>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input type="password" name="Password">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your new password</b>
                            </label>
                        </section>
                        <section>
                            <label class="label">Re-type Password</label>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input type="password" name="PasswordConfirm">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your new password</b>
                            </label>
                            <div class="note">
                                <a href="@Url.Action("Login", "Account")"><i class="fa"></i> Already remembered my password?</a>
                            </div>
                        </section>
                        <section>
                            <label class="checkbox">
                                <input type="checkbox" name="rememberMe" value="true">
                                <input type="hidden" name="rememberMe" value="false" checked="checked" />
                                <i></i>Remember me?
                            </label>
                        </section>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-default">
                            Reset
                        </button>
                    </footer>
                </form>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="text-align:center;">
                    <span style="font-size:11px;">@DateTime.Now.Year Peregrine Academic Services™ LLC.</span>
                </div>
            </div>
        </div>
    </div>
</div>