@model PAS.ResourceCenter.Web.Administration.ViewModels.Home.MyProfileViewModel

<div class="modal-dialog">
    <div style="background-color:#ffffff;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" onclick="clearData();">
                &times;
            </button>
            <h4 class="modal-title">My Profile</h4>
        </div>
        <div class="modal-body no-padding">
            <div class="smart-form">
                @Html.ValidationBootstrap()
                <fieldset>
                    <section>
                        <div class="row">
                            <label class="label col col-3 field-background" style="text-align:right;"><b><span style="color:red; font-size:14px;">*</span>&nbsp;Last Name</b></label>
                            <div class="col col-9">
                                <label class="input">
                                    @Html.TextBoxFor(m => m.ProfileLastName, new { placeholder = "", autocomplete = "off", required = "required", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.ProfileLastName)
                                </label>
                            </div>
                        </div>
                    </section>
                    <section>
                        <div class="row">
                            <label class="label col col-3 field-background" style="text-align:right;"><b><span style="color:red; font-size:14px;">*</span>&nbsp;First Name</b></label>
                            <div class="col col-9">
                                <label class="input">
                                    @Html.TextBoxFor(m => m.ProfileFirstName, new { placeholder = "", autocomplete = "off", required = "required", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.ProfileFirstName)
                                </label>
                            </div>
                        </div>
                    </section>
                    <section>
                        <div class="row">
                            <label class="label col col-3 field-background" style="text-align:right;">Middle Name</label>
                            <div class="col col-9">
                                <label class="input">
                                    @Html.TextBoxFor(m => m.ProfileMiddleName, new { placeholder = "", autocomplete = "off", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.ProfileMiddleName)
                                </label>
                            </div>
                        </div>
                    </section>
                    <section>
                        <div class="row">
                            <label class="label col col-3 field-background" style="text-align:right;"><b><span style="color:red; font-size:14px;">*</span>&nbsp;Email</b></label>
                            <div class="col col-9">
                                <label class="input">
                                    <i class="icon-append fa fa-envelope"></i>
                                    @Html.TextBoxFor(m => m.ProfileEmail, new { placeholder = "", autocomplete = "off", required = "required", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.ProfileEmail)
                                </label>
                            </div>
                        </div>
                    </section>
                </fieldset>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-default" data-dismiss="modal" onclick="clearData();">
                Cancel
            </button>
        </div>
    </div>
</div>
