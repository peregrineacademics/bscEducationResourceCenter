@model PAS.ResourceCenter.Web.Administration.ViewModels.ReviewProperties.CompetencyViewModel

@Html.HiddenFor(m => m.Id)

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" onclick="clearData();">
                &times;
            </button>
            <h4 class="modal-title">Competency / Purge</h4>
        </div>
        <div class="modal-body no-padding">
            <div class="smart-form">
                @Html.ValidationBootstrap()
                <fieldset>
                    <section>
                        <div class="row">
                            <div class="col col-12">
                                Are you sure you want to purge "@Model.Name" (Y/N)?
                                <br />
                                <br />
                                <i style="color:red;">(Note: The record will be permanently removed from the system.)</i>
                            </div>
                        </div>
                    </section>
                </fieldset>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Yes</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
        </div>
    </div>
</div>